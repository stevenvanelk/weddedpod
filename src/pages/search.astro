---
import Layout from "../layouts/Layout.astro";
import HeroImg from "../components/HeroImg.astro";
import { Image } from "astro:assets";
import heroImg from "../images/index/wedded_logo.webp";
---

<Layout>
  <Fragment slot="head">
    <title>Search | Wedded</title>
    <link rel="canonical" href="https://weddedpod.com/search" />
    <meta
      name="description"
      content="Search blog posts, podcast episodes, and other pages across the Wedded website."
    />
    <meta
      property="og:site_name"
      content="Wedded - A Wedding Planning Podcast"
    />
    <meta property="og:title" content="Search | Wedded" />
    <meta
      property="og:description"
      content="Search blog posts, podcast episodes, and other pages across the Wedded website."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://weddedpod.com/search" />
    <meta property="og:image" content="/images/index/wedded_logo.webp" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Search | Wedded" />
    <meta
      name="twitter:description"
      content="Search blog posts, podcast episodes, and other pages across the Wedded website."
    />
    <meta name="twitter:image" content="/images/index/wedded_logo.webp" />
    <meta name="twitter:url" content="https://weddedpod.com/search" />
    <meta itemprop="name" content="Search | Wedded" />
    <meta
      itemprop="description"
      content="Search blog posts, podcast episodes, and other pages across the Wedded website."
    />
    <meta itemprop="url" content="https://weddedpod.com/search" />
    <meta itemprop="image" content="/images/index/wedded_logo.webp" />
    <link
      rel="preload"
      as="image"
      href={heroImg.src}
      type="image/webp"
      fetchpriority="high"
    />
  </Fragment>

  <main>
    <HeroImg title="Come Find What You're Looking For" background={heroImg} />

    <div class="search-container">
      <p class="search-text">
        Use the search below to find blog posts, resources, and pages across the
        Wedded website.
        <br /><br />
        <em
          >Please note: Some ads may appear in the results and may link to other
          websites. If you use an ad blocker, you probably won't see them
          though.</em
        >
      </p>

      <div class="gcse-search"></div>
    </div>
  </main>

  <script is:raw>
    const gcsScript = document.createElement("script");
    gcsScript.src = "https://cse.google.com/cse.js?cx=11573a092c0bb49ed";
    gcsScript.async = true;
    document.body.appendChild(gcsScript);
  </script>
</Layout>
